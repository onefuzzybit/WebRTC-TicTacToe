{
	"name": "webrtc-tic-tac-toe",
	"version": "1.0.0",
	"description": "",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/onefuzzybit/WebRTC-TicTacToe.git"
	},
	"author": "One Fuzzy Bit",
	"private": true,
	"workspaces": [
		"./signalling-client",
		"./signalling-connect",
		"./signalling-server",
		"./tic-tac-toe-ms1"
	],
	"scripts": {
		"pretty": "prettier --write .",
		"gcp-set-account": "gcloud config set account onefuzzybit@gmail.com",
		"gcp-login": "gcloud auth login",
		"gcp-set-project": "gcloud config set project one-fuzzy-bit",
		"gcp-get-server-ip": "gcloud compute instances describe webrtc-signalling-server --zone=europe-west1-b | grep natIP | awk '{print $2}'",
		"ssh-server": "ssh onefuzzybit@$(npm run gcp-get-server-ip --silent)",
		"deploy-server": "scp -r ./signalling-server onefuzzybit@$(npm run gcp-get-server-ip --silent):~"
	},
	"devDependencies": {
		"@typescript-eslint/eslint-plugin": "^5.57.0",
		"@typescript-eslint/parser": "^5.57.0",
		"eslint": "^8.37.0",
		"eslint-config-prettier": "^8.8.0",
		"prettier": "2.8.7"
	}
}
